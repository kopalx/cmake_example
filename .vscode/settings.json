{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"files.associations": {
    "*.tcc": "cpp",
    "*.h": "cpp",
    "*.hpp": "cpp",
    "*.cu": "cpp"
    },
    
    "python.pythonPath": "${env:CODE_HOME}/Code/work/1/py_env1/bin/python",
    "python.defaultInterpreterPath": "${env:CODE_HOME}/Code/work/1/py_env1/bin/python3",
    "python.languageServer": "Pylance",
    
    "cmake.buildDirectory": "${env:HOME}/Temp/${workspaceFolderBasename}_build",
    "cmake.configureSettings": {
        "CUDA_ENABLE": "OFF"
    },
}